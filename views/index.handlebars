<section>
  <a id="gigs"></a>
  <div class="row" id="sort-row">
    <div class="btn-group">
      <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true"
        aria-expanded="false" id="sort">
        Sort By:
      </button>


      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="/#gigs">Newest</a>
        <a class="dropdown-item" href="/?orderBy=budgethigh#gigs">Budget High</a>
        <a class="dropdown-item" href="/?orderBy=budgetlow#gigs">Budget Low</a>
      </div>
    </div>
  </div>


  <div id="open-card-title">

    <h2>Open Help Requests</h2>
    <h5>Put your skills to work and help our community</h5>

  </div>



  <div class="card-deck ">
    {{#each gigs}}


      <div class="card col-lg-4" style="min-width: 20rem;" id="cards">
        {{!-- <img src="..." class="card-img-top" alt="..."> --}}
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <small>Requestor: {{poster}}</small>
          <hr>

          <p class="card-text">{{description}}</p>
        </div>
        <div class="card-footer">
          <button class="btn btn-success" type="submit" id="help" onclick="window.location.href='/gigview/{{id}}'">I Can
            Help!</button>
          <small class="text-muted">Budget: {{budget}}</small>

        </div>
      </div>
   

    {{/each}}
  </div>




  <br>

</section>



